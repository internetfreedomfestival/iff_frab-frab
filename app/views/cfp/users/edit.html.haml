%section{style: "margin: 20px"}
  .page-header
    %h1=t("cfp.edit_account")
  .row
    .span16
      = simple_form_for(@user, url: cfp_user_path, html: { multipart: true }) do |f|
        %fieldset.inputs
          .offset1
            .row
              .span24{style: "line-height: 22px; padding: 10px; width: 922px;"}
                = f.input :email
                = f.input :password, hint: t("cfp.password_hint")
                = f.input :password_confirmation

              .span24
                %br
                = f.button :submit, t("cfp.update"), class: 'primary'
                = link_to t("cfp.back"), cfp_root_path, class: "btn danger"
