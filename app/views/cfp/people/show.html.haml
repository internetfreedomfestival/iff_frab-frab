%section
  .page-header
    .pull-right
      - unless @conference.in_the_past
        - unless cfp_hard_deadline_over?
          = action_button "primary", t("cfp.submit_new_event"), new_cfp_event_path
        
      = action_button "", t("cfp.edit_registration"), edit_cfp_person_path
      = action_button "", t("cfp.edit_account"), edit_cfp_user_path
    %h2 Welcome to the IFF 2018
  .row
    .span8{style: "background-color: #f2f2f2"}
      %h2{style: "margin-bottom: 10px"}=t("cfp.call_for_proposal_headline")
      %p=t("cfp.call_for_prop_info")
      <br />
      - unless @conference.call_for_participation.info_url.blank?
        %p=t("cfp.info_url_description_html", link: link_to(@conference.call_for_participation.info_url, @conference.call_for_participation.info_url))
      %p
        =t("cfp.deadline_description")
        %b October 31st, 2017
        /%b= l(@conference.call_for_participation.end_date)
      <br />
      - if cfp_hard_deadline_over?
        %p=t("cfp.hard_deadline_over")
      - elsif @person.events_in(@conference).size > 0 and not @conference.in_the_past
        - if @person.availabilities_in(@conference).count == 0
          .clear
        %p=t("cfp.input_appreciation")
        <br />
        .row
          .offset2
            = action_button "success", t("cfp.submit_another_event"), new_cfp_event_path
      - else
        - unless @conference.in_the_past
          /%p=t("cfp.not_forget_personal_details")
        .clear
        <br />
        .row
          .offset1
            - if @not_registered  
              = action_button "success", t("cfp.register"), edit_cfp_person_path
              = action_button "success", t("cfp.submit_new_event"), new_cfp_event_path
            - else
              = action_button "success", t("cfp.submit_new_event"), new_cfp_event_path
    .span8{style: "background-color: #f2f2f2"}
      %h2{style: "margin-bottom: 10px"}=t("cfp.contact_headline")
      %p=t("cfp.contact_mattermost")
      =button_to 'Join the IFF Mattermost', "https://community.internetfreedomfestival.org/signup_user_complete/?id=ae9acd5b24f12ad51e158db0cddd97d0", method: :get
      %p Follow the IFF on Twitter to be on top of all things IFF!
      =button_to 'Follow @InternetFF', "http://twitter.com/internetff/", method: :get
      %p Subscribe to the IFF Weekly Mailing List to get general news and updates, community stories, upcoming events and new job opportunities, all conveniently summarized and sent to your inbox once a week!
      =button_to 'Subscribe', "https://lists.ghserv.net/mailman/listinfo/festival", method: :get  
  <hr />
  .row
    .span8{style: "background-color: #f2f2f2"}        
      %h2{style: "margin-bottom: 10px"}=t("cfp.diversity_inclusion_headline")
      %p=t("cfp.dif_mission")
      %p=t("cfp.diversity_info") 
    .span8{style: "background-color: #f2f2f2"}
      %h2{style: "margin-bottom: 10px"} IFF Wiki
      %p The IFF Wiki is the central information hub for the IFF. You will find useful tips about our host city of Valencia including where to stay, transportation options, restaurants and more!
      =button_to 'Check out the IFF Wiki', "https://internetfreedomfestival.org/wiki/index.php/Main_Page", method: :get
  <hr />
  .row
    .span8{style: "background-color: #f2f2f2"}
      %h2{style: "margin-bottom: 10px"} Respect and Collaboration 
      %p The IFF is designed to improve collaboration among very diverse communities, and is committed to providing a safe, welcoming and fun environment for everybody.
      %p We encourage all participants to approach the event with open and positive attitudes, to engage constructively with others, and take the time to celebrate the passion and accomplishments of fellows attendees.
      =button_to 'Please Review our Code of Conduct', "https://internetfreedomfestival.org/wiki/index.php/Code_of_Conduct", method: :get
    .span8{style: "background-color: #f2f2f2"}
      %h2{style: "margin-bottom: 10px"} Contact
      %p=t("cfp.contact_description_html", mail_to: mail_to(@conference.call_for_participation.contact_email))
      %p <a href="https://pgp.mit.edu/pks/lookup?op=get&search=0xF60A89AD6FF97A2F">Public PGP Key</a>
  <hr />
  .row
    .span16
      - if @person.events_in(@conference).size > 0
        <br />
        %h2=t("cfp.events_submitted")
        = render "table", collection: @person.events_as_presenter_in(@conference)
